@{
    ViewBag.EasyuiVersion = "1.5.2";
}
<!doctype html>
<html lang="zh">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width=device-width" />
    <!--加载共通CSS-->
    <link href="~/Content/css/base.css" rel="stylesheet" type="text/css" />
    <!--加载960CSS框架-->
    <link href="~/Content/css/960/fluid/reset.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/css/960/fluid/text.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/css/960/fluid/grid.css" rel="stylesheet" type="text/css" />
    <!--加载主题CSS-->
    <link href="~/Content/themes/default/style.css" rel="stylesheet" type="text/css" />
  
    <!--加载按钮CSS  -->
    <link href="~/Content/css/btns/css3btn.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/css/btns/sexybuttons.css" rel="stylesheet" type="text/css" />
    <!--加载组件CSS-->
    <link href="~/Scripts/jquery-plugin/showloading/showLoading.css" rel="stylesheet" type="text/css" />
    <!--加载样式修正CSS-->
    <link href="~/Content/css/hack/fix.css" rel="stylesheet" type="text/css" />
    <!--加载jQuery-->
   @* <script src="~/Scripts/chartjs/echarts.js" type="text/javascript"></script>*@
    @RenderSection("head", required: false)
</head>
<body class="z-body">
    @RenderBody()
    <!--加载脚本库-->
    @Scripts.Render("~/Scripts/library")
   
    <!--加载easyui加载器-->
    <script type="text/javascript" src="~/Scripts/jquery-easyui-@ViewBag.EasyuiVersion/easyloader.js?locale=zh_CN&theme=bootstrap"></script>
    @RenderSection("scripts", false)
    <!--加载图标库CSS-->
    <link href="~/Content/css/icon/icon.css" rel="stylesheet" type="text/css" />
</body>
</html>
