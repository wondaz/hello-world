@{
    ViewBag.Title = "工时费管理";
    Layout = "~/Content/Layout/_Layout.cshtml";
}

@section scripts{
    <script src="~/Areas/Biz4S/JS/ManHour/ManHourList.js"></script>
    <script type="text/javascript">
        using(['calendar']);
        var vdata = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model));
        var ViewModel = function() {
            this.selfGrid = {
                //singleSelect:false,
                pageSize: 100,
                selectOnCheck:false,
                checkOnSelect:false
            };
            vms.search.apply(this, arguments);
        }
        var vm = new ViewModel(vdata);
        ko.bindingViewModel(vm);
    </script>
}
<div id="condition" class="container_12" style="position:relative;">
    <div class="grid_3 val">
        工时编码：<input class="z-txt easyui-validatebox" data-bind="value:form.ManHourCode" />
    </div>
    <div class="grid_3 val">
        车&nbsp;&nbsp;&nbsp;&nbsp;系：
        <input type="text" data-bind="datasource:ds.B_AutoSeries,comboboxValue:form.SeriesID" data-options="editable:false" class=" z-txt easyui-combobox" />
    </div>
    <div class="grid_3 val">
        车&nbsp;&nbsp;&nbsp;&nbsp;型：
        <input type="text" data-bind="datasource:ds.B_AutoModel,comboboxValue:form.ModelID" data-options="editable:false" class=" z-txt easyui-combobox" />
    </div>
    <div class="grid_3 val">
         <a id="a_search" href="#" class="easyui-linkbutton" data-bind="click:searchClick" icon="icon-search" style="margin:0 15px;">查询</a>
         <a id="a_reset" href="#" class="easyui-linkbutton" data-bind="click:clearClick" icon="icon-clear">清空</a>
    </div>
    <div class="clear"></div>
</div>

<div class="z-toolbar">
    <a href="#" plain="true" class="easyui-linkbutton" data-options="iconCls:'icon-page_excel'" data-bind="click:downloadClick">导出</a>
    <a href="#" plain="true" class="easyui-linkbutton" icon="icon-add1" title="新增" data-bind="click:addClick">新增</a>
    <a href="#" plain="true" class="easyui-linkbutton" icon="icon-page_edit" title="浏览" data-bind="click:editClick">浏览</a>
    <a href="#" plain="true" class="easyui-linkbutton" icon="icon-delete" title="删除" data-bind="click:deleteClick">删除</a>

</div>
    <table id="gridlist" data-bind="datagrid:grid">
        <thead>
            <tr>
                <th data-options="field:'ManHourCode',align:'center',sortable:false, width:150">工时编码</th>
                <th data-options="field:'ManHourDescribe',align:'center',sortable:false, width:200">工时名称</th>
                <th data-options="field:'MaintainType',align:'center',sortable:false" hidden></th>
                <th data-options="field:'MaintainTypeName',align:'center',sortable:false, width:130">工时类型</th>
                <th data-options="field:'SeriesName',align:'center',sortable:true, width:150">车系</th>
                <th data-options="field:'ModelName',align:'center',sortable:true, width:150">车型</th>
                <th data-options="field:'ManHour',align:'center',sortable:true, width:100">工时费用</th>
                <th data-options="field:'AddonsManHour',align:'center',sortable:true, width:100">附加费用</th>
                <th data-options="field:'DispatchManHour',sortable:true,align:'right',width:100">派工费用</th>
                <th data-options="field:'Remark',sortable:true,align:'center',width:200">备注</th>
                <th data-options="field:'ManHourID'" hidden></th>
            </tr>
        </thead>
    </table>